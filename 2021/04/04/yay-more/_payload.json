6,838],{"id":837},"nopgpfetch",[29,839,840],{},"--nopgpfetch",[16,842,843],{},"不自动导入陌生的PGP密钥。",[145,845,846],{"id":846},"useask选项",[162,848,616,850],{"id":849},"useask",[29,851,852],{},"--useask",[16,854,855],{},"调用pacman的--ask询问用户是否删除系统中与当前包冲突的软件包。",[162,857,859],{"id":858},"nouseask",[29,860,861],{},"--nouseask",[16,863,864],{},"不调用pacman的--ask询问用户是否删除系统中与当前包冲突的软件包，遇到冲突的软件包时直接报错，由用户来手动解决。",[145,866,867],{"id":867},"combinedupgrade菜单",[162,869,871],{"id":870},"combinedupgrade",[29,872,873],{},"--combinedupgrade",[16,875,876],{},"在系统更新期间，将源内包和AUR包的更新菜单合并到一起。",[162,878,616,880],{"id":879},"nocombinedupgrade",[29,881,882],{},"--nocombinedupgrade",[16,884,885],{},"在系统更新期间，先支持源内包的升级，完成后再进行AUR包的升级。",[67,887,889],{"id":888},"t-or-f-型","T or F 型",[145,891,892],{"id":892},"devel",[162,894,895],{"id":892},[29,896,897],{},"--devel",[16,899,900,901,904],{},"在系统更新期间，检查AUR的vcs包是否有更新，当前仅支持AUR的-git包。 devel查询是使用",[29,902,903],{},"git ls-remote","对比安装时和现在最新的commit_id完成的。",[162,906,616,908],{"id":907},"nodevel",[29,909,910],{},"--nodevel",[16,912,913],{},"在系统更新期间， 不检查AUR的vcs包是否有更新。",[145,915,916],{"id":916},"timeupdate",[162,918,919],{"id":916},[29,920,921],{},"--timeupdate",[16,923,924],{},"在系统更新期间，将已安装软件包的构建时间与每个软件包的AUR的最后修改时间进行比较。",[162,926,616,928],{"id":927},"notimeupdate",[29,929,930],{},"--notimeupdate",[16,932,933],{},"在系统更新期间，不将已安装软件包的构建时间与每个软件包的AUR的最后修改时间进行比较。",[145,935,936],{"id":936},"redownload",[162,938,939],{"id":936},[29,940,941],{},"--redownload",[16,943,944],{},"就算PKGBUILD已经存在，也要重新从AUR上获取一份新的PKGBUILD并覆盖原有PKGBUILD。",[162,946,948],{"id":947},"redownloadall",[29,949,950],{},"--redownloadall",[16,952,953],{},"就算PKGBUILD已经存在，也要重新从AUR上获取所有AUR包的PKGBUILD并覆盖原有PKGBUILD。",[162,955,616,957],{"id":956},"noredownload",[29,958,959],{},"--noredownload",[16,961,962],{},"当下载PKGBUILD时，，如果发现cache中的PKGBUILD版本＞＝AUR上的版本时，直接使用本地的PKGBUILD。",[145,964,965],{"id":965},"rebuild",[162,967,968],{"id":965},[29,969,970],{},"--rebuild",[16,972,973],{},"即使在cache中有可用的二进制包的情况下，也始终要重新编译目标软件包。",[162,975,977],{"id":976},"rebuildall",[29,978,979],{},"--rebuildall",[16,981,982],{},"即使在cache中有可用的二进制包的情况下，也始终要重新编译所有的AUR包。",[162,984,986],{"id":985},"rebuildtree",[29,987,988],{},"--rebuildtree",[16,990,991],{},"安装AUR包时，以递归方式重新编译并重新安装其所有AUR依赖包，即使已安装的依赖项也是如此。 该选项使您可以轻松地针对当前系统的库重新构建软件包，如果它们变得不兼容。（比如python3.8->3.9）",[162,993,616,995],{"id":994},"norebuild",[29,996,997],{},"--norebuild",[16,999,1000],{},"构建软件包时，如果在缓存中找到该软件包并且该软件包与想要的软件包的版本相同，则跳过软件包的编译过程并使用现有的二进制程序。",[145,1002,1003],{"id":1003},"sudoloop",[162,1005,1006],{"id":1003},[29,1007,1008],{},"--sudoloop",[16,1010,1011],{},"在后台循环调用sudo，以防止sudo授权在长时间构建期间超时。",[162,1013,616,1015],{"id":1014},"nosudoloop",[29,1016,1017],{},"--nosudoloop",[16,1019,1020],{},"不在后台循环调用sudo，可能会导致sudo授权在长时间构建期间超时。",[145,1022,1023],{"id":1023},"batchinstall",[162,1025,1026],{"id":1023},[29,1027,1028],{},"--batchinstall",[16,1030,1031],{},"在构建和安装AUR包时，对每个软件包的安装进行排序，而并非在构建之后立刻安装每个软件包时。 需要注意的是，一旦构建了所有软件包，或者需要构建队列中的软件包作为构建另一个软件包的依赖项，应当在安装队列中安装所有软件包。",[162,1033,616,1035],{"id":1034},"nobatchinstall",[29,1036,1037],{},"--nobatchinstall",[16,1039,1040],{},"在构建AUR包成功后立即安装。",[145,1042,1043],{"id":1043},"clearafter",[162,1045,1047],{"id":1046},"cleanafter",[29,1048,1049],{},"--cleanafter",[16,1051,1052],{},"在构建AUR包完成以后清除cache文件。",[162,1054,616,1056],{"id":1055},"nocleanafter",[29,1057,1058],{},"--nocleanafter",[16,1060,1061],{},"在构建AUR包完成以后不清除cache文件。",[67,1063,1064],{"id":1064},"其他型",[162,1066,1068],{"id":1067},"save",[29,1069,1070],{},"--save",[16,1072,1073],{},"把你这一次执行yay后面跟的配置参数永久保存下来。",[162,1075,1077],{"id":1076},"aururl",[29,1078,1079],{},"--aururl",[16,1081,1082,1083,1089,1090],{},"更改aur源地址（默认为 ",[1084,1085,1086],"a",{"href":1086,"rel":1087},"https://aur.archlinux.org",[1088],"nofollow"," ），",[174,1091,1092],{},"适用于中国用户，可以使用此参数将AUR的地址设置成清华的反代，具体的配置命令为",[98,1094,1098],{"className":1095,"code":1096,"language":1097,"meta":106,"style":106},"language-bash shiki shiki-themes one-light one-dark-pro","yay --aururl \"https://aur.tuna.tsinghua.edu.cn\" --save\